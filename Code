      margin-bottom: 15px;
      color: #333;
      font-size: 1rem;
    }

    #messageBox {
      text-align: center;
      margin-bottom: 15px;
      font-weight: bold;
      display: none;
      padding: 8px;
      border-radius: 5px;
    }

    .success {
      color: #155724;
      background: #d4edda;
      border: 1px solid #c3e6cb;
    }

    .error {
      color: #721c24;
      background: #f8d7da;
      border: 1px solid #f5c6cb;
    }

    .task-input {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .task-input input[type="text"] {
      flex: 2;
      padding: 8px;
      margin-right: 5px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .task-input input[type="date"] {
      flex: 1;
      padding: 8px;
      margin-right: 5px;
      border-radius: 5px;
